{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "module": "commonjs",
    "noUnusedLocals": true,
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "skipLibCheck": true,
    "strict": true,
    "target": "es2017"
  },
  "files": [
    "src/index.ts",
    "src/public/js/index.tsx",
    "src/public/js/randomizer.ts",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}