{
  "name": "typescript-boilerplate",
  "description": "Boilerplate for TypeScript project.",
  "version": "1.0.0",
  "bugs": {
    "url": "https://github.com/progre/typescript-boilerplate/issues"
  },
  "build": {
    "directories": {
      "output": "output"
    },
    "files": [
      "dist",
      "LICENSE",
      "README.md"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@progre/tslint-config": "~5.9.0",
    "@progre/webpack-config": "0.0.1",
    "@types/node": "^8.9.4",
    "del-cli": "^1.1.0",
    "electron": "^2.0.2",
    "electron-builder": "^20.15.1",
    "husky": "^0.14.3",
    "npm-run-all": "^4.1.3",
    "source-map-support": "^0.5.6",
    "ts-loader": "^4.3.1",
    "tslint": "^5.10.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^2.9.1",
    "webpack": "^4.10.2",
    "webpack-cli": "^3.0.2"
  },
  "homepage": "https://github.com/progre/typescript-boilerplate#readme",
  "license": "CC0-1.0",
  "main": "dist/index.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/progre/typescript-boilerplate.git"
  },
  "scripts": {
    "build": "run-s clean release-build",
    "clean": "del-cli dist tmp",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "debug-build": "webpack --mode development --progress",
    "dev": "webpack --mode development --progress --watch",
    "package": "electron-builder --win  --mac zip",
    "release-build": "webpack --mode production --progress",
    "start": "electron ."
  },
  "typings": "dist/index.d.ts"
}
